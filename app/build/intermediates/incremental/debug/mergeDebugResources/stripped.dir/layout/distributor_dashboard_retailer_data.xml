<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/_10sdp"
    android:layout_height="wrap_content">



    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="wrap_content"
        app:cardBackgroundColor="@color/colordatatopretaileropacity60"
        android:layout_height="@dimen/_60sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:cardCornerRadius="@dimen/_7sdp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_20sdp"

            android:layout_height="wrap_content">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/margin">

                <TextView
                    android:id="@+id/tv_retailer_name"
                    style="@style/text_roboto_400wt_14sp_black_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/distributor_name_details_page" />

                <TextView
                    android:id="@+id/tv_retailer_amount"
                    style="@style/text_roboto_600wt_18sp_black_color"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_retailer_name"
                    android:layout_centerVertical="true"
                    android:paddingRight="@dimen/_5sdp"
                    android:text="@string/bills_amount" />
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</RelativeLayout>