<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	
	<RelativeLayout
		android:id="@+id/rlHeader"
		android:layout_width="match_parent"
		android:layout_height="@dimen/_55sdp"
		android:background="@drawable/submit_background">
		
		<RelativeLayout
			android:id="@+id/ivForwardButton"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_width="wrap_content">
		
		
		<ImageView
			android:id="@+id/ivForward"
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/_10sdp"
			
			android:layout_width="wrap_content"
			android:background="@drawable/arrow_forward">
		</ImageView>
		</RelativeLayout>
		
		<TextView
			android:id="@+id/headerTextView"
			style="@style/text_roboto_600wt_24sp_black"
			android:layout_width="wrap_content"
			android:layout_toEndOf="@+id/ivForwardButton"
			
			android:layout_height="wrap_content"
			android:layout_marginStart="@dimen/_20sdp"
		
			android:layout_marginEnd="@dimen/_10sdp"
			android:layout_centerVertical="true"
			android:text="@string/monthly_target_tracker_header" />
	</RelativeLayout>
	
	
	<RelativeLayout
		android:layout_below="@id/rlHeader"
		 android:layout_height="wrap_content"
		android:layout_margin="@dimen/_10sdp"
		android:layout_width="wrap_content">
		
		<ProgressBar
			android:id="@+id/id_pbar"
			style="@style/appProgressbar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="gone"
			android:layout_centerHorizontal="true"
			android:layout_centerVertical="true"
			android:layout_marginTop="@dimen/_40sdp"
			android:indeterminate="true" />
		
		
		
		<RelativeLayout
			android:id="@+id/rlHorizontalPercentage"
			android:visibility="invisible"
			android:layout_below="@+id/id_pbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			>
			
			
			<RelativeLayout
				android:id="@+id/ll_complete_status"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center_horizontal"
				android:orientation="horizontal">
				
				<include
					android:id="@+id/retailer_tracker_recyclerview"
					layout="@layout/dashboard_recyclerview"
					android:layout_marginBottom="@dimen/_10sdp"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="@dimen/_5sdp" />

			</RelativeLayout>

		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/rl_monthly_details"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="invisible"
			android:layout_marginTop="@dimen/_20sdp"
			android:background="@drawable/searchbar_background"
			android:layout_below="@id/rlHorizontalPercentage">
			
			<include
				android:id="@+id/my_dashboard_tracker_recyler_view"
				layout="@layout/dashboard_recyclerview"
				android:layout_marginBottom="@dimen/_10sdp"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="@dimen/marginTopBottom" />
		</RelativeLayout>

		</RelativeLayout>
	</RelativeLayout>