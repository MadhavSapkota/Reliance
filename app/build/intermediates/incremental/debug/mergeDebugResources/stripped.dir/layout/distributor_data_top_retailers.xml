<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto">
	
	
	<androidx.cardview.widget.CardView
		android:layout_marginStart="@dimen/_5sdp"
		android:id="@+id/card_view_total_transcations"
		android:layout_width="match_parent"
		app:cardBackgroundColor="@color/white"
		android:layout_height="wrap_content"
		app:cardCornerRadius="@dimen/_7sdp">
		
		<RelativeLayout
			android:id="@+id/rl_total_transactions"
			android:layout_width="match_parent"
			android:layout_height="@dimen/_90sdp"
			android:background="@color/colordatatopretaileropacity60">
			
			
			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerVertical="true"
				android:layout_marginStart="@dimen/_10sdp"
				android:layout_marginEnd="@dimen/_5sdp"
				android:layout_marginBottom="@dimen/_14sdp">
				
				<TextView
					android:id="@+id/tv_bill_number"
					style="@style/text_roboto_14sp_400_opacity60"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/_1sdp"
					android:text="@string/total_transaction" />
				
				<RelativeLayout
					android:id="@+id/rl_retailer_transaction"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@+id/tv_bill_number"
					android:layout_centerVertical="true">
					
					
					<TextView
						android:id="@+id/tv_transcation_amount"
						style="@style/text_roboto_28sp_700_black"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginBottom="@dimen/_4sdp"
						android:text="@string/total_transaction_amount" />
				</RelativeLayout>
			</RelativeLayout>
		
		</RelativeLayout>
	
	
	</androidx.cardview.widget.CardView>

</LinearLayout>