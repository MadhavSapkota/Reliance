<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="vertical">

<LinearLayout
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:layout_width="match_parent">


    <TextView
        android:layout_marginTop="@dimen/_10sdp"
        style="@style/text_14_black_bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/date_converter_dialog_header_nepali"
        android:textColor="@color/black" />

    <LinearLayout
        android:id="@+id/llPicker"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.95"
            android:orientation="vertical">
            <TextView
                style="@style/paragraph_small_black1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:text="@string/date_converter_dialog_year"
                android:textColor="@color/black" />
            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_100sdp"
                android:background="@android:drawable/editbox_background"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/spYear"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
             android:layout_marginStart="@dimen/_15sdp"
            android:orientation="vertical">

            <TextView
                style="@style/paragraph_small_black1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:text="@string/date_converter_dialog_month"
                android:textColor="@color/black" />
            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_80sdp"
                android:background="@android:drawable/editbox_background"
                android:layout_height="wrap_content">
                <Spinner
                    android:id="@+id/spMonth"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    />
            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.95"
            android:orientation="vertical">
            <TextView
                style="@style/paragraph_small_black1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_converter_dialog_day"
                android:layout_marginLeft="@dimen/_10sdp"
                android:textColor="@color/black" />
            <RelativeLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_100sdp"
                android:background="@android:drawable/editbox_background"
                android:layout_height="wrap_content">

                <Spinner
                    android:id="@+id/spDay"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingBottom="@dimen/_3sdp" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_ok"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:text="@string/date_converter_dialog_ok"
            style="@style/text_16_black_bold"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:background="@android:color/transparent"
            android:text="@string/date_converter_dialog_cancel"
            android:layout_alignParentEnd="true"
            style="@style/text_16_black_bold"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</LinearLayout>
</LinearLayout>