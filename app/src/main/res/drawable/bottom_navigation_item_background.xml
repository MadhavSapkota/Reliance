<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_checked="true">
		<layer-list>
			<item android:height="56dp"> <!-- set the desired height of the selected item -->
				<shape android:shape="rectangle">
					<solid android:color="@color/shadesOfBlue" />
					<corners android:radius="8dp" />
				</shape>
			</item>
			<item android:height="48dp"> <!-- set the desired height of the unselected items -->
				<shape android:shape="rectangle">
					<solid android:color="@color/shadesOfGray" />
					<corners android:radius="8dp" />
				</shape>
			</item>
		</layer-list>
	</item>
	<item>
		<shape android:shape="rectangle">
			<solid android:color="@color/shadesOfGray" />
			<corners android:radius="8dp" />
		</shape>
	</item>
</selector>
