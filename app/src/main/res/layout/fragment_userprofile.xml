<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="fill_parent"
	android:layout_height="match_parent"
	android:background="@color/colorPrimary"
	android:fillViewport="true">
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="@color/dropshadow">
			
			<RelativeLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/_150sdp"
				android:background="@drawable/submit_background">
				
				<TextView
					android:id="@+id/tvPageName"
					style="@style/text_roboto_600wt_24sp_black"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_10sdp"
					android:layout_marginTop="@dimen/_40sdp"
					android:text="@string/profile" />
			</RelativeLayout>
			
			<RelativeLayout
				android:id="@+id/rlUser"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginStart="@dimen/_10sdp"
				android:layout_marginTop="@dimen/_95sdp"
				android:layout_marginEnd="@dimen/_10sdp"
				
				>
				
				<androidx.cardview.widget.CardView
					android:id="@+id/card_view_total_transcations"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="@dimen/_15sdp"
					app:cardCornerRadius="@dimen/_7sdp">
					
					<RelativeLayout
						android:layout_width="wrap_content"
						android:layout_height="wrap_content">
						
						<RelativeLayout
							android:id="@+id/rl_total_transactions"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:background="@color/colorWhite">
							
							<ImageView
								android:id="@+id/imageView_transcation_icon"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_marginStart="@dimen/_15sdp"
								android:layout_marginTop="@dimen/_15sdp"
								android:layout_marginEnd="@dimen/_15sdp"
								android:src="@drawable/user_profile" />
							
							<RelativeLayout
								android:id="@+id/rl_retailer_transaction"
								android:layout_width="wrap_content"
								android:layout_height="wrap_content"
								android:layout_centerHorizontal="true"
								android:layout_marginTop="@dimen/_10sdp"
								android:layout_marginBottom="@dimen/_10sdp"
								android:layout_toEndOf="@+id/imageView_transcation_icon">
								
								<RelativeLayout
									android:id="@+id/rl_user"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_marginBottom="@dimen/_5sdp"
									android:layout_marginEnd="@dimen/_10sdp">
									
									
									<TextView
										android:id="@+id/tv_transcation_amount"
										style="@style/text_roboto_20sp_600_black"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_centerVertical="true"
										android:text="@string/user" />
								
								</RelativeLayout>
								
								<RelativeLayout
									android:id="@+id/rl_changePassword"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_below="@+id/rl_user"
									android:layout_marginBottom="@dimen/_5sdp"
									android:layout_marginTop="@dimen/_10sdp">
									
									<TextView
										android:id="@+id/tv_changePassword"
										style="@style/text_roboto_16sp_400_black"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_centerVertical="true"
										android:layout_marginBottom="@dimen/_4sdp"
										android:text="@string/changePassword" />
								
								</RelativeLayout>
								
								<RelativeLayout
									android:id="@+id/rl_twoWaysAuthentication"
									android:layout_width="wrap_content"
									android:layout_height="wrap_content"
									android:layout_below="@+id/rl_changePassword"
									android:layout_marginBottom="@dimen/_10sdp"
									android:layout_marginTop="@dimen/_8sdp">
									
									<TextView
										android:id="@+id/tv_twoWaysAuthentication"
										style="@style/text_roboto_16sp_400_black"
										android:layout_width="wrap_content"
										android:layout_height="wrap_content"
										android:layout_centerVertical="true"
										android:layout_marginBottom="@dimen/_4sdp"
										android:text="@string/twoFactorAuth" />
								
								</RelativeLayout>
							
							</RelativeLayout>
						</RelativeLayout>
					</RelativeLayout>
				
				
				</androidx.cardview.widget.CardView>
			
			</RelativeLayout>
			
			<RelativeLayout
				android:id="@+id/rl_logout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_below="@+id/rlUser"
				android:layout_marginStart="@dimen/_10sdp"
				android:layout_marginTop="@dimen/_10sdp"
				android:layout_marginEnd="@dimen/_10sdp"
				android:layout_marginBottom="@dimen/_10sdp"
				android:background="@drawable/logout_background">
				
				<TextView
					android:id="@+id/btn_login"
					style="@style/text_roboto_600wt_20sp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_centerHorizontal="true"
					android:layout_centerVertical="true"
					android:layout_marginTop="@dimen/_30sdp"
					android:text="@string/logout" />
			</RelativeLayout>
		</RelativeLayout>
	</RelativeLayout>
</androidx.core.widget.NestedScrollView>
