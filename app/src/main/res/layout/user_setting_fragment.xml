<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/dropshadow">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_150sdp"
                android:background="@drawable/submit_background">

                <TextView
                    android:id="@+id/tvPageName"
                    style="@style/text_roboto_600wt_24sp_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:text="@string/settings" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_95sdp"
                android:layout_marginEnd="@dimen/_10sdp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_view_total_transcations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_15sdp"
                    app:cardCornerRadius="@dimen/_7sdp">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:id="@+id/rl_setting_data"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/colorWhite">

                            <ImageView
                                android:id="@+id/imageView_data_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_15sdp"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_marginEnd="@dimen/_15sdp"
                                android:src="@drawable/user_profile_data_icon" />

                            <RelativeLayout
                                android:id="@+id/rl_data"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:layout_toEndOf="@+id/imageView_data_icon">

                                <RelativeLayout
                                    android:id="@+id/rl_data_bill"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginEnd="@dimen/_10sdp"
                                    android:layout_marginBottom="@dimen/_5sdp">


                                    <TextView
                                        android:id="@+id/tv_data"
                                        style="@style/text_roboto_20sp_600_black"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:text="@string/data" />

                                    <CheckBox
                                        android:id="@+id/ivDropIconData"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:adjustViewBounds="true"
                                        android:background="@drawable/keyboard_arrow_right_24"
                                        android:button="@null"
                                        android:checked="false"
                                        android:clickable="true"
                                        android:scaleType="fitXY"
                                        android:visibility="gone" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rl_bill_data"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/rl_data_bill"
                                    android:layout_marginTop="@dimen/_8sdp"
                                    android:layout_marginBottom="@dimen/_5sdp">

                                    <TextView
                                        android:id="@+id/tv_billData"
                                        style="@style/text_roboto_16sp_400_black"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginBottom="@dimen/_4sdp"
                                        android:text="@string/bill" />

                                </RelativeLayout>

                                <RelativeLayout
                                    android:id="@+id/rl_data_distributor_list"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/rl_bill_data"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_15sdp">

                                    <TextView
                                        android:id="@+id/tv_distributor_list"
                                        style="@style/text_roboto_16sp_400_black"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginBottom="@dimen/_8sdp"
                                        android:text="@string/distributorList" />

                                </RelativeLayout>
                            </RelativeLayout>

                        </RelativeLayout>
                    </RelativeLayout>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDistributor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/submit_background"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tV_distributor_portal"
                    style="@style/text_roboto_700wt_19sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:text="@string/distributorPortal" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlAdmin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rlDistributor"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:background="@drawable/submit_background"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tV_admin_portal"
                    style="@style/text_roboto_700wt_19sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:text="@string/adminPortal" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>