<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginStart="@dimen/_10sdp"
	android:layout_marginEnd="@dimen/_10sdp"
	android:layout_marginBottom="@dimen/_10sdp"
	
	>
	
	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		
		<RelativeLayout
			android:id="@+id/rlCoilMat"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">
			
			<TextView
				android:id="@+id/coilMatTextView"
				style="@style/text_16sp_500_black"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_marginEnd="@dimen/_15sdp"
				android:text="Coil Mat" />
			
			<View
				android:id="@+id/view"
				android:layout_width="@dimen/_5sdp"
				android:layout_height="@dimen/_25sdp"
				android:layout_centerHorizontal="true" />
		
		</RelativeLayout>
		
		<RelativeLayout
			android:layout_below="@+id/rlCoilMat"
			android:id="@+id/rlCurrentAverageMonthly"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/_7sdp"
			android:layout_width="wrap_content">

			<RelativeLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content">
			
			<TextView
				android:id="@+id/tvCurrentMonthPurchase"
				style="@style/text_14sp_400_black"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:text="@string/retailer_current_monthly_purchase">
			</TextView>
			</RelativeLayout>
			
			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:layout_centerHorizontal="true">
				
				
				<TextView
					android:id="@+id/tVRs"
					style="@style/text_16sp_400_lightgreen"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_10sdp"
					
					android:text="@string/coil_rs_text" />
				
				<TextView
					android:id="@+id/tvCurrentAveragePurchase"
					style="@style/text_16sp_400_lightgreen"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_toEndOf="@id/tVRs"
					android:text="@string/coil_mat_max_price" />
			</RelativeLayout>
			
			
		</RelativeLayout>
		
		
		<RelativeLayout
			android:layout_below="@+id/rlCurrentAverageMonthly"
			android:id="@+id/rlRequiredAveragePurchase"
			android:layout_height="wrap_content"
			android:layout_marginBottom="@dimen/_7sdp"
			android:layout_width="wrap_content">

			<RelativeLayout
				android:layout_height="wrap_content"
				android:layout_width="wrap_content">
			
			<TextView
				android:id="@+id/tvRequiredCurrentPurchase"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				style="@style/text_14sp_400_black"
				android:text="@string/retailer_required_monthly_purchase">
			</TextView>
			</RelativeLayout>
			
			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_alignParentEnd="true"
				android:layout_centerHorizontal="true">
				
				
				<TextView
					android:id="@+id/tvRs"
					style="@style/text_16sp_500_lightblack"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_10sdp"
					android:text="@string/coil_rs_text" />
				
				<TextView
					android:id="@+id/tvRequiredAveragePurchase"
					style="@style/text_16sp_600_blackColor"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_toEndOf="@id/tvRs"
					android:text="@string/retailer_required_monthly_purchase_cost" />
			</RelativeLayout>
		
		</RelativeLayout>
		
		<View
			android:id="@+id/view_line1"
			android:layout_width="match_parent"
			android:layout_height="@dimen/_1sdp"
			android:layout_below="@+id/rlRequiredAveragePurchase"
			android:layout_marginStart="@dimen/_5sdp"
			android:layout_marginTop="@dimen/_5sdp"
			android:layout_marginEnd="@dimen/_8sdp"
			android:background="@color/ten_percentage_opacity_background" />
	</RelativeLayout>


</RelativeLayout>