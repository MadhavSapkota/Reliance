<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_marginBottom="@dimen/_10sdp"
	android:layout_height="wrap_content">

	
	
		<androidx.cardview.widget.CardView
			android:id="@+id/card_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:cardCornerRadius="@dimen/_7sdp">
			
			<RelativeLayout
				android:layout_width="match_parent"
				android:background="@color/lightWhiteGray"
				android:layout_height="wrap_content">
				
				
				<RelativeLayout
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/margin"
					android:layout_marginTop="@dimen/_20sdp"
					android:layout_marginEnd="@dimen/_5sdp"
					android:layout_marginBottom="@dimen/_14sdp"
					android:layout_width="match_parent">
					
				<TextView
					android:id="@+id/tv_bill_number"
					style="@style/text_roboto_400wt_20sp_90percent_opacity"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="@string/bills_entry_number" />
					
					<TextView
						android:id="@+id/tv_bills_date"
						android:layout_below="@+id/tv_bill_number"
						style="@style/text_roboto_400wt_14sp_black"
						android:layout_marginTop="@dimen/_5sdp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/bills_date" />
					
					<TextView
						android:id="@+id/tv_bills_amount"
						android:layout_alignParentRight="true"
						style="@style/text_roboto_700wt_20sp_black"
						android:layout_centerVertical="true"
						android:paddingRight="@dimen/_5sdp"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="@string/bills_amount" />
				</RelativeLayout>
				
				<LinearLayout
					android:id="@+id/lL_color_bar"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:background="@color/colorLightGreen"
					android:orientation="vertical"
					android:padding="@dimen/_2sdp" />
			
			</RelativeLayout>
		</androidx.cardview.widget.CardView>
	
	
</RelativeLayout>