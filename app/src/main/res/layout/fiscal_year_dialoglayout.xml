<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="@android:color/transparent">
	
	<RelativeLayout
		android:id="@+id/rlUser"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@android:color/transparent"
		android:orientation="vertical">
		
		<FrameLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@android:color/transparent">
			
			<androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/tools"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="@dimen/_5sdp"
				android:layout_marginTop="@dimen/_2sdp"
				android:layout_marginRight="@dimen/_5sdp"
				app:cardBackgroundColor="@color/colorWhite"
				app:cardCornerRadius="@dimen/_12sdp"
				app:cardUseCompatPadding="true"
				card_view:cardCornerRadius="5dp"
				card_view:cardUseCompatPadding="true">
				
				
				<RelativeLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginStart="@dimen/_20sdp"
					android:layout_marginTop="@dimen/_20sdp"
					android:layout_marginEnd="@dimen/_10sdp">
					
					<TextView
						android:id="@+id/tvFiscalYearHeading"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						style="@style/text_16sp_600_black"
						android:layout_marginTop="@dimen/_10sdp"
						android:text="@string/fiscal_year_dialog_header_name" />
					
					
					<TextView
						android:id="@+id/tvFiscalYearSubheading"
						style="@style/text_14sp_400_blackseventypercentageopacity"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_below="@+id/tvFiscalYearHeading"
						android:layout_marginTop="@dimen/_10sdp"
						android:text="@string/fiscal_year_dialog_subheader" />
					
					
					<Spinner
						android:id="@+id/sp_distributor"
						android:layout_width="match_parent"
						android:layout_height="@dimen/_35sdp"
						android:layout_below="@+id/tvFiscalYearSubheading"
						android:layout_marginTop="@dimen/_20sdp"
						android:layout_marginBottom="@dimen/_20sdp"
						android:background="@drawable/spinner_background"
						android:focusable="false"
						android:spinnerMode="dialog"
						android:text="@string/spinner_select" />
				
				</RelativeLayout>
			</androidx.cardview.widget.CardView>
		</FrameLayout>
	</RelativeLayout>
</RelativeLayout>